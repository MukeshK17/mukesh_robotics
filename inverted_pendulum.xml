<mujoco model = "inverted pendulum">
    <compiler inertiafromgeom="true"/>
    <default>
        <joint = armature = "0" damping= "1" limited= "true"/>
        <geom contype = "0" fricition = "1 0.1 0.1" rgba = "0.7 0.7 0 1"/>
    </default>
    <option gravity = "0 0 -9.81" integrator = "RK4" timestep = "0.001"/>
    <size nstack = "3000"/>

    <worldbody>
        <geom name = "rail" type = "capsule" size = "2 .1" pos = "0 0 0"/>
        <body name = "cart" pos = "0 0 0">
            <joint name = "slider" type = "slide" axis = "1 0 0" limited = "true"
            range = "-2 2"/>
            <geom name = "cart" type = "box" size = ".2 .1 .1" pos = "0 0 .1" rgba = "0 0.7 0.7 1" />
            <body name = "pole" pos = "0 0 .2">
                <joint name = "hinge" type = "hinge" axis = "0 1 0" limited = "true" range = "-36 36"/>
                <geom name = "pole" type = "capsule" fromto = '0 0 0 0 0 1' size = "0.05" rgba = "0.7 0 0 1"/>
            </body>
        </body>
    </worldbody>
    <actuator>
    <motor ctrllimited = "true" ctrlrange = "-3 3" gear = "100" joint = "slider" name = "slide"/>
    </actuator>
</mujoco>

