<!-- Pendulum problem :  Pendulum hitting a falling ball -->
<mujoco model="pendulum_horizontal_hit">
  <compiler angle="radian" coordinate="local"/>
  <option timestep="0.001" gravity="0 0 -9.81"integrator="RK4" />

  <default>
    <joint armature="0.01" damping="0.5"/>
    <geom rgba="0.7 0.3 0.3 1"/>
  </default>

  <worldbody>    
    <geom name="floor" type="plane" pos="0 0 0" size="7 7 0.1" rgba="0.9 0.9 0.9 1"/>
    
    <body name="pendulum_base" pos="0 0 3">
      
      <joint name="hinge" type="hinge" axis="0 1 0" limited="false"/>
      
      <geom name="rod" type="capsule" fromto="0 0 0  1.5 0 0" size="0.05"/>
  
      <body name="bob" pos="1.5 0 0">
        <geom name="bob_geom" type="sphere" size="0.1" mass="1" rgba="0.8 0.2 0.2 1"/>
      </body>
    </body>

    <body name="ball" pos="-1.2 0 6.2">
      <freejoint/>
      <geom name="ball_geom" type="sphere" size="0.1" mass="0.1" rgba="0.2 0.2 0.8 1"/>
    </body>

    <body pos="-4.8 0 1" euler="0 0 0">
      <inertial pos="0 0 0" mass = "10" diaginertia = "0.1 0.1 0.1"/>
      <joint type="free"/>
      <geom type="box" size=".1 .2 .8" rgba="0 .9 0 1"/>
    </body>

    <body pos="-4.8 0 2" euler="0 1.57 0">
      <inertial pos="0 0 0" mass = "1" diaginertia = "0.1 0.1 0.1"/>
      <joint type="free"/>
      <geom type="box" size=".1 .1 .9" rgba="0.9 0 0 1"/>
    </body>

  </worldbody>
</mujoco>






